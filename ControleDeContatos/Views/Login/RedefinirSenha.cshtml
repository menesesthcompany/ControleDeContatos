@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">

    <h3>Login</h3>
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="exampleInputPassword" placeholder="Digite seu Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" id="exampleInputPassword" placeholder="Digite sua Senha">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <br />

    <button type="submit" class="btn btn-outline-primary btn-lg">Redefinir Senha</button>
    <button role="button" asp-controller="Login" asp-action="Index" class="btn btn-outline-danger btn-lg">Retornar</button>
</form>