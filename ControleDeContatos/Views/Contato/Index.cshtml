@model List<ContatoModel>

@{
    ViewData["Title"] = "Listagem de Contatos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-primary" role="button" asp-controller="Contato" asp-action="Criar">Adicionar novo contato</a>
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]            
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]            
        </div>
    }
    
    <h3 class="display-4">Listagem de Contatos</h3>
    <p>Sistema de Controle de Contatos</p>
</div>

<table class="table table-dark table-striped" id="table-contatos">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Idade</th>
            <th scope="col">Nacionalidade</th>
            <th scope="col">Numero de tel</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ContatoModel contato in Model)
            {
                <tr>
                    <th scope="row">@contato.id</th>
                    <td>@contato.Idade</td>
                    <td>@contato.Nacionalidade</td>
                    <td>@contato.Celular</td>
                    <td>
                        <div class="btn-group">
                            <a role="button" class="btn btn-outline-primary" asp-route-id="@contato.id" asp-controller="Contato" asp-action="Editar">Editar</a>
                            <a role="button" class="btn btn-outline-warning" asp-route-id="@contato.id" asp-controller="Contato" asp-action="ApagarConfirmacao">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>